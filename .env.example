# Apex Scanner Configuration

# ============================================
# AUTHENTICATION (Change these in production!)
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
JWT_SECRET_KEY=generate-a-random-secret-key-here
JWT_EXPIRATION_HOURS=24

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# SCANNER CONFIGURATION
# ============================================
ENABLE_GRYPE=true
ENABLE_TRIVY=true
ENABLE_SYFT=true
SCAN_TIMEOUT=300

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# METRICS
# ============================================
ENABLE_METRICS=true
METRICS_PATH=/metrics

# ============================================
# DIRECTORIES
# ============================================
REPORTS_DIR=/var/www/html/reports
SBOMS_DIR=/var/www/html/sboms

# ============================================
# CELERY FLOWER (Worker Monitoring)
# ============================================
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-password
